DefaultTemplate
{
  "template": [
    {
      "resourceType": "EC2_Instance",
      "defaultPolicy": {
        "policies": [
          {
            "name": "old-instances",
            "resource": "ec2",
            "filters": [
              {
                "type": "instance-age",
                "days": "${EC2_INSTANCE_AGE}"
              }
            ]
          }
        ]
      }
    },
    {
      "resourceType": "EBS_Volume",
      "defaultPolicy": {
        "policies": [
          {
            "name": "ebs-mark-unattached-deletion-default",
            "resource": "ebs",
            "filters": [
              {
                "Attachments": []
              },
              {
                "tag:maid_status": "absent"
              }
            ],
            "actions": [
              {
                "type": "${OPERATION_TYPE}",
                "op": "${OPERATION}",
                "days": "${DAYS}"
              }
            ]
          }
        ]
      }
    }
  ]
}


